pipeline {
  agent {
        docker {
          image 'sha256:a8560b36e8b8210634f77d9f7f9efd7ffa463e380b75e2e74aff4511df3ef88c'
        }
     }
    stages {
        stage ("Build") {
           steps {
              sh "npm install"
      }
    }
      stage('install playwright') {
        steps {
          sh 'npm playwright install'
      }
    }
    stage('help') {
      steps {
        sh 'npx playwright test --help'
      }
    }
    stage('test') {
      steps {
        sh '''
          npx playwright test --list
          npx playwright test
        '''
      }
    }
  }
}
