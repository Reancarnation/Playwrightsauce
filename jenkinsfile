pipeline {
  agent {
        docker {
          image 'alpine'
        }
     }
     stages {
        stage ("Build") {
           steps {
              sh "npm install"
      }
    }
  stages {
    stage('install playwright') {
      steps {
        sh 'npm playwright install'
      }
    }
    stage('help') {
      steps {
        sh 'npx playwright test --help'
      }
    }
    stage('test') {
      steps {
        sh '''
          npx playwright test --list
          npx playwright test
        '''
        }
      }
    }
  }
}