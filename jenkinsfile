pipeline {
  agent {
        docker {
          image 'node:22.14.0-alpine3.21'
        }
     }
    stages {
        stage ("Build") {
           steps {
              sh "npm install"
      }
    }
      stage('install playwright') {
        steps {
          sh 'npm playwright install'
      }
    }
    stage('help') {
      steps {
        sh 'npx playwright test --help'
      }
    }
    stage('test') {
      steps {
        sh '''
          npx playwright test --list
          npx playwright test
        '''
      }
    }
  }
}
